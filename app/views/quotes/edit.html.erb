<h1> Edit a Quote</h1>
<%= form_tag "/quotes/#{@quote.id}", method: :patch do %>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, @quote.description, {class: "form-control", placeholder: "Enter description"} %>
  </div>
  <div class="form-group">
    <%= label_tag :location %>
    <%= text_field_tag :location, @quote.location, {class: "form-control", placeholder: "Where?"} %>
  </div>
  <div class= "form-group">
    <%= label_tag :date %>
    <%= text_field_tag :date, @quote.date, {class: "form-control", placeholder: "Enter date"} %>
  </div>
  <div>
    <%= button_tag 'Send', class: "btn btn-default" %>
  </div>
<% end %>