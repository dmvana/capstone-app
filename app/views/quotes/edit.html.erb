<h1> Edit a Quote</h1>
<%= form_tag '/quotes/:id', method: :patch do %>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description {class: "form-control", placeholder: "Enter description"} %>
  </div>
  <div class= "form-group">
    <%= label_tag :date %>
    <%= text_field_tag :date {class: "form-control", placeholder: "Enter class"} %>
  </div>
  <div>
    <%= button_tag 'Send', class: "btn btn-default" %>
  </div>
<% end %>